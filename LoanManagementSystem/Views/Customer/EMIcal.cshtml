<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EMI Calculator with Pie Chart</title>
    <link rel="stylesheet" href="~/Content/emiStyle.css">
    <!-- Add Chart.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="containerEMI">
        <h2>EMI Calculator</h2>
        <div class="row calculator">
            <div class="col">
                <label for="loanAmount">Loan Amount</label>
                <input type="number" id="loanAmount" placeholder="Enter loan amount">

                <label for="interestRate">Interest Rate (%)</label>
                <input type="number" id="interestRate" step="0.1" placeholder="Enter interest rate">

                <label for="loanTenure">Loan Tenure (Years)</label>
                <input type="number" id="loanTenure" placeholder="Enter loan tenure in years">

                <button id="calculateBtn">Calculate EMI</button>

                <div class="result">
                    <h3>Your EMI is: ₹<span id="emiResult">0</span></h3>
                </div>
            </div>

            @*<div class="chart-container">
        <h3>EMI Breakdown</h3>
        <canvas id="emiChart"></canvas>
             Pie chart canvas 
            </div>*@

        <div class="col">
            <div class="chart-container">
                <h3>EMI Breakdown</h3>
                <canvas id="emiChart"></canvas>
                Pie chart canvas
            </div>
        </div>
        </div>
    </div>

    <script src="~/Content/emiScript.js"></script>
</body>
</html>
