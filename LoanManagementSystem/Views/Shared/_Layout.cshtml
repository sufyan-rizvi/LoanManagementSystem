<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AKSYS Loans</title>
    <!-- CSS Links -->
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <!-- JS Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <!-- Wrapper for flexbox layout -->
    <div class="page-wrapper d-flex flex-column min-vh-100">
        <!-- Header Section -->
        <header class="bg-gradient-red text-light py-3 shadow">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo Section -->
                <a href="@Url.Action("Index", "Customer")" style="text-decoration: none;">
                    <img src="~/Content/Loader.gif" alt="AKSYS Loans" class="logo" />
                </a>
                <a class="navbar-brand display-4 text-light ml-2" href="@Url.Action("Index", "Customer")" style="text-decoration: none;">
                    AKSYS LOANS
                </a>
                <nav class="d-flex align-items-center">
                    <ul class="nav">
                        @if (IsSectionDefined("NavbarOptions"))
                        {
                            @RenderSection("NavbarOptions", required: false)
                        }
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="btn btn-outline-light mx-2" href="@Url.Action("Logout", "Account")">Logout</a>
                            }
                            else
                            {
                                <a class="btn btn-light mx-2" href="@Url.Action("Login", "Account")">Login</a>
                            }
                        </li>
                    </ul>
                </nav>
            </div>
        </header>

        <!-- Main Content Section -->
        <main class="container my-5 flex-grow-1">
            @RenderBody()
            <hr />
        </main>

        <!-- Footer Section -->
        <footer class="text-light py-4 mt-auto">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>About AKSYS Loans</h5>
                        <p>We provide financial services that cater to all your lending needs, from home loans to business loans. Reliable, trusted, and secure.</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Index", "Home")" class="text-light">Home</a></li>
                            <li><a href="@Url.Action("LoanSchemes", "Customer")" class="text-light">Loan Schemes</a></li>
                            <li><a href="@Url.Action("Contact", "Home")" class="text-light">Contact Us</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h5>Follow Us</h5>
                        <a href="#" class="text-light mx-2"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light mx-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light mx-2"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <p>&copy; AKSYS LOANS @DateTime.Now.Year. All Rights Reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    <script>
        $(function () {
            // Add custom JS functionality if needed
        });
    </script>
</body>
</html>
